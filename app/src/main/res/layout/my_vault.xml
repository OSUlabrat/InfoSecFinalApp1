<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
android:background="@color/colorGreen"
tools:context="com.mrpanda2.infosecfinal.MyVaultActivity">
    <EditText
        android:id="@+id/emailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Enter email/username"/>
    <EditText
        android:id="@+id/serviceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter service name"/>
    <Button
        android:id="@+id/userQueryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:onClick="searchUsernames"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Search For Username"/>
    <Button
        android:id="@+id/serviceQueryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:onClick="searchService"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Search For Service"/>
    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:onClick="addCredentials"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Add Login Credential"/>
    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:onClick="delateCredentials"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Delete Login Credentials"/>
    <Button
        android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:onClick="updateService"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Update Service Login"/>
    <Button
        android:id="@+id/displayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:onClick="displayCredentials"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="List your usernames"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />
    </ScrollView>



</LinearLayout>